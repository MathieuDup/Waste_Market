<%# My orders as buyer %>
<% if @buyer_orders.length <= 0 && @seller_orders.length <= 0 %>
  <h2 class= "mt-4"> Oops, you do not have any order yet.</h2>
<% end %>
<% if @buyer_orders.length > 0 %>
<h2>My <%= @buyer_orders.length %> orders as buyer</h2>
<% end %>
<div class="cards-orders">
  <% @buyer_orders.each do |order| %>
    <%= render 'orders/card_order', order: order %>
  <% end %>
</div>

<%# My orders as seller %>
  <% unless @seller_orders.empty? %>
    <h2>My <%= @seller_orders.length %> orders as seller</h2>
  <% end %>
  <div class="cards-orders">
    <% @seller_orders.each do |order| %>
      <%= render 'orders/card_order', order: order %>
    <% end %>
  </div>
