<div class="myprofile">
  <%# My Header and buttons %>
  <h1 class="text-center"><%= current_user.username %>'s profile</h1>
  <div class="user-order-btn">
    <%= link_to 'Edit my profile', edit_user_registration_path, class:"btn-green-secondary" %>
    <%= link_to 'Add a product', '/products/new/scan', class:"btn-green-primary" %>
  </div>

  <%# Tabs %>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="myproducts-tab" data-bs-toggle="tab" data-bs-target="#myproducts-tab-pane" type="button" role="tab" aria-controls="myproducts-tab-pane" aria-selected="false">
        My products <% if current_user.products.any? %>
        (<%=current_user.products.count %>)
        <% end %></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="myfavorites-tab" data-bs-toggle="tab" data-bs-target="#myfavorites-tab-pane" type="button" role="tab" aria-controls="myfavorites-tab-pane" aria-selected="true">
      My favorites<% if current_user.bookmarks.any? %>
        (<%=current_user.bookmarks.count %>)
        <% end %></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="myorders-tab" data-bs-toggle="tab" data-bs-target="#myorders-tab-pane" type="button" role="tab" aria-controls="myorders-tab-pane" aria-selected="false">
      My orders <% if @seller_orders.any? %>
        (<%= @seller_orders.count %>)
        <% end %></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews-tab-pane" type="button" role="tab" aria-controls="reviews-tab-pane" aria-selected="false">
      My Reviews <% if current_user.my_reviews.any? %>
        (<%= current_user.my_reviews.count %>)
        <% end %></button>
      </button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="myproducts-tab-pane" role="tabpanel" aria-labelledby="myproducts-tab" tabindex="0">
      <%= render 'users/myproducts' %>
    </div>
    <div class="tab-pane fade show" id="myfavorites-tab-pane" role="tabpanel" aria-labelledby="myfavorites-tab" tabindex="0">
      <%= render 'users/myfavorites' %>
    </div>
    <div class="tab-pane fade" id="myorders-tab-pane" role="tabpanel" aria-labelledby="myorders-tab" tabindex="0">
      <%= render 'users/myorders' %>
    </div>
    <div class="tab-pane fade" id="reviews-tab-pane" role="tabpanel" aria-labelledby="reviews-tab" tabindex="0">
      <%= render 'users/reviews' %>
    </div>
  </div>
</div>
