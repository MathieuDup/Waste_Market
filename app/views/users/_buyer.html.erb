<%# My favorites %>
<% if current_user.bookmarks.length > 0 %>
  <h2>My <%= current_user.bookmarks.length %> favorites</h2>
<% end %>
<div class="cards-products">
  <% current_user.bookmarks.each do |bookmark| %>
    <%= render 'products/card_product', product: bookmark.product %>
  <% end %>
</div>

<%# My orders as buyer %>
<% if @buyer_orders.length > 0 %>
<h2>My <%= @buyer_orders.length %> orders as buyer</h2>
<% end %>
<div class="cards-orders">
  <% @buyer_orders.each do |order| %>
    <%= render 'orders/card_order', order: order %>
  <% end %>
</div>
