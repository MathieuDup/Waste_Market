<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, input_html: {value: @product_scanned&.name || ''}%>
    <%= f.input :description, input_html: {value: @product_scanned&.description || ''} %>
    <%= f.input :price, input_html: {value: @product_scanned&.price || ''}%>
    <%= f.association :category, collection: Category.all, prompt: "Choose a Category", selected: @product_scanned&.category&.name %>
    <%= f.association :sub_category, collection: SubCategory.all, prompt: "Choose a Sub Category", selected: @product_scanned&.sub_category&.name  %>
    <%= f.input :characteristics, input_html: {value: @product_scanned&.characteristics || ''}%>
    <%= f.input :brand, input_html: {value: @product_scanned&.brand || ''} %>
    <%= f.input :photo, as: :file, input_html: {value: @product_scanned&.photo || ''} %>
    <%= f.input :quantity_left, as: :range, input_html: { min: '25', max: '100', step: '25', value: '50' }, label: 'Quantity Left : 25%, 50%, 75%, 100%' %>
    <%= f.input :condition %>
    <%= f.input :buying_date, as: :date, start_year: Date.today.year , end_year: Date.today.year - 30,
                                                        order: [:month, :year] %>
    <%= f.input :expiration_date, as: :date,
                                  end_year: Date.today.year + 10, discard_day: true,
                                  order: [:month, :year] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-green" %>
  </div>
<% end %>
