<h2> Top Categories</h2>

<div class="cards-categories">
  <% @categories.each do |category| %>
    <%= render 'products/card_category', category: category %>
  <% end %>
</div>


<h2 id="products-anchor">Trending products</h2>

<div class="cards-products">
  <% @products.each do |product| %>
    <%= render 'products/card_product', product: product%>
  <% end %>
</div>
