<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@order, @review], html: { class: "review_form" }) do |f| %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", id: "review_rating" %>
        <%= f.submit class: "d-none" %>
      <% end %>
    </div>
  </div>
</div>
